{
  "name": "diapk-financial-platform",
  "version": "1.0.0",
  "description": "Comprehensive Financial Platform with KYC, Deposits, IPO, Stock Quotes, Chat and Admin Panel",
  "main": "src/server.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "node src/scripts/migrate.js",
    "seed": "node src/scripts/seed.js",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "deploy:prepare": "npm run install:all && npm run build",
    "deploy": "node deploy.js",
    "production": "NODE_ENV=production node src/server.js"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "i18next": "^23.4.4",
    "i18next-fs-backend": "^2.1.5",
    "i18next-http-middleware": "^3.3.2",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "node-cron": "^3.0.2",
    "rate-limit-redis": "^4.2.0",
    "sequelize": "^6.32.1",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "archiver": "^7.0.1",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.3"
  },
  "keywords": [
    "financial",
    "platform",
    "kyc",
    "deposit",
    "ipo",
    "stock",
    "chat",
    "admin"
  ],
  "author": "DIAPK Team",
  "license": "MIT"
}
